{
    "manifest_version": 3,
    "name": "MG Web Admin",
    "version": "1.0",
    "description": "A plugin for Mediagistic web designers.",
    "icons": {
      "48": "icon48.png"
    },
    "action": {
      "default_icon": "icon48.png",
      "default_popup": "popup.html",
      "default_title": "MG Web Admin"
    },
    "permissions": [
      "storage",
      "activeTab",
      "scripting"
    ],
    "content_security_policy": {
      "extension_pages": "script-src 'self'; object-src 'self'"
    },
    "background": {
      "service_worker": "background.js"
    },
    "commands": {
      "action": {
        "suggested_key": {
          "default": "Ctrl+Shift+Y",
          "mac": "MacCtrl+Shift+Y"
        },
        "description": "Open MG Web Admin overlay"
      }
    }
  }
  